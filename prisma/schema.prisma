generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}

model expenses {
  // UUID default gen_random_uuid()
  id           String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  
  // Note: Di tabel Anda tipe datanya Integer (Bulat), bukan Desimal
  amount       Int       
  
  description  String
  category     String
  
  // Timestamp without time zone (precision 3)
  date         DateTime  @db.Timestamp(3) 
  
  // Ada dua kolom URL di tabel Anda, kita masukkan keduanya agar aman
  imageUrl     String?
  receipt_url  String?
  
  // Default CURRENT_TIMESTAMP
  createdAt    DateTime  @default(now()) @db.Timestamp(3) 
  
  user_id      String?   @db.Uuid
  allowance_id String?   @db.Uuid

  // Relasi ke allowances
  allowances   allowances? @relation(fields: [allowance_id], references: [id])
}

model allowances {
  // UUID default gen_random_uuid()
  id         String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id    String?   @db.Uuid
  month      Int
  year       Int
  
  // Numeric(12,2) -> Di Prisma jadi Decimal
  amount     Decimal   @db.Decimal(12, 2)
  remaining  Decimal   @db.Decimal(12, 2)
  
  // Timestamp with time zone
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  updated_at DateTime? @default(now()) @db.Timestamptz(6)

  expenses   expenses[]
}
